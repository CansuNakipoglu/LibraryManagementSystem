@model LibaryManagementSystem.Core.Models.Entities.Author

<style>
    .form-wrapper {
        margin: 50px auto;
        max-width: 100%;
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .form-control {
        margin-bottom: 15px;
    }
</style>

    <div class="container mt-5">
        <div class="form-wrapper">

        <div class="row text-center mt-3 mb-3" style="font-family:'Roboto Condensed', sans-serif;"> <h1 style="font-weight:bolder; font-size:50px; color:rgb(59 113 202)">Yazar Ekle</h1></div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Yazar Adı</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Yazar Soyadı</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label">Doğum Tarihi</label>
                <input type="date" asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            
            <div class="row mt-5">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary btn-block">Ekle</button>
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-warning btn-block">Vazgeç</a>
                </div>
            </div>
        </form>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
