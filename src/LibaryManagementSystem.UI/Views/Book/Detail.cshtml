@model LibaryManagementSystem.Core.Models.Entities.Book

<style>
    .detail-wrapper {
        margin: 50px auto;
        width: 100%;
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .detail-content {
        margin-bottom: 15px;
    }

        .detail-content strong {
            font-weight: bold;
        }

    .btn-container {
        margin-top: 20px;
    }
</style>

<div class="container mt-5">
    <div class="detail-wrapper">
        <div class="row text-center mt-3 mb-3" style="font-family:'Roboto Condensed', sans-serif;"> <h1 style="font-weight:bolder; font-size:50px; color:rgb(59 113 202)">Kitap Detay</h1></div>
        <div class="detail-content">
            <p><strong>Kitap Id:</strong> @Html.DisplayFor(model => model.Id)</p>
            <p><strong>Kitap Başlığı:</strong> @Html.DisplayFor(model => model.Title)</p>
            <p><strong>Yazar Id:</strong> @Html.DisplayFor(model => model.AuthorId)</p>
            <p><strong>Kitap Türü:</strong> @Html.DisplayFor(model => model.Genre)</p>
            <p><strong>Kitap Çıkış Tarihi:</strong> @Model.PublishDate.ToString("yyyy/MM/dd")</p>
            <p><strong>ISBN Numarası:</strong> @Html.DisplayFor(model => model.ISBN)</p>
            <p><strong>Mevcut Kopya Sayısı:</strong> @Html.DisplayFor(model => model.CopiesAvailable)</p>
        </div>
        <div class="btn-container mt-5">
            <div class="row">
                <div class="col-md-4">
                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary btn-block">Düzenle</a>
                </div>
                <form asp-action="Delete" asp-route-id="@Model.Id" id="deleteForm" class="col-md-4">
                    <input type="submit" value="Sil" class="btn btn-danger btn-block" />
                </form>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-warning btn-block">Vazgeç</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('deleteForm').addEventListener('submit', function (event) {
        event.preventDefault(); 

        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu işlemi geri alamazsınız!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'Hayır, iptal et'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('deleteForm').submit();
            }
        })
    });
</script>