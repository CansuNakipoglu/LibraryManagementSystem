@model LibaryManagementSystem.UI.Models.ViewModels.UserVM;
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 200px);
    }
</style>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="Register" asp-controller="auth">

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0">Kayıt Ol</p>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input asp-for="FullName" class="form-control form-control-lg" placeholder="Geçerli Bir Ad Soyad Giriniz" />
                        <label asp-for="FullName" class="form-label">Ad Soyad</label>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input asp-for="Email" type="email"  class="form-control form-control-lg" placeholder="Geçerli Bir Mail Hesabı Giriniz" />
                        <label asp-for="Email" class="form-label" >Email</label>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Geçerli Bir Telefon Numarası Giriniz" />
                        <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-3">
                        <input asp-for="Password"  type="password"  class="form-control form-control-lg" placeholder="Geçerli Bir Şifre Giriniz" />
                        <label asp-for="Password" class="form-label">Şifre</label>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-3">
                        <input asp-for="RePassword" type="password" class="form-control form-control-lg" placeholder="Geçerli Bir Şifre Giriniz" />
                        <label asp-for="RePassword" class="form-label">Şifre Tekrar</label>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;"> Kayıt Ol </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0"> Bir hesabın zaten var mı? <a asp-action="Register"class="link-danger">Giriş Yap</a> </p>
                    </div>
                    
                    <div class="divider d-flex align-items-center my-4"> </div>

                </form>
            </div>
        </div>
    </div>
</section>


