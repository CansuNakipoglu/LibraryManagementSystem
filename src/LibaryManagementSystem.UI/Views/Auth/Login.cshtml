@model LibaryManagementSystem.UI.Models.ViewModels.UserVM;
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }
    .h-custom {
        height: calc(100% - 600px);
    }
</style>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row text-center mt-5 pt-5" style="font-family:'Roboto Condensed', sans-serif;"> <h1 style="font-weight:bolder; font-size:70px; color:rgb(59 113 202)">Kütüphane Yönetim Sistemi</h1></div>
        
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="login" asp-controller="auth">

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0">Giriş Yap</p>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Enter a valid email address" />
                        <label class="form-label" asp-for="Email">Email</label>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-3">
                        <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Enter password" />
                        <label class="form-label" asp-for="Password">Şifre</label>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Giriş Yap
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0"> Bir hesabın yok mu? <a asp-action="Register" class="link-danger">Kayıt Ol</a>
                        </p>
                    </div>

                    <div class="divider d-flex align-items-center my-4"> </div>
                </form>
            </div>
        </div>
    </div>
</section>


